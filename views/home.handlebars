  <!-- Include this script in your home.handlebars or any other protected page -->
<script>
  function checkSession() {
      fetch('/check-session', { method: 'GET', credentials: 'include' })
        .then(response => {
          if (response.status === 401) {
            window.location.href = '/login';
          }
        })
        .catch(error => {
          console.error('Error checking session:', error);
        });
    }

    // Check session on page load
    checkSession();

    // Listen for changes in localStorage across tabs
    window.addEventListener('storage', (event) => {
      if (event.key === 'loggedOut' && event.newValue === 'true') {
        window.location.href = '/login';
      }
    });

    // When signing out, update localStorage
    document.querySelector('form').addEventListener('submit', () => {
      localStorage.setItem('loggedOut', 'true');
    });
</script>

</body>
